#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node" --loader drizzle-kit/loader.mjs --no-warnings "$basedir/../drizzle-kit/index.cjs" "$@"
else 
  exec node --loader drizzle-kit/loader.mjs --no-warnings "$basedir/../drizzle-kit/index.cjs" "$@"
fi
